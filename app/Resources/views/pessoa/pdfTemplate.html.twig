{% extends 'base.html.twig' %}

{% block body %}
    <center><h1>Lista de Relat√≥rio de Pessoas</h1></center>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Identidade</th>
                <th scope="col">Login</th>
                <th scope="col">Senha</th>
            </tr>
        </thead>
        <tbody>
            {% for p in pessoas %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.nome }}</td>
                    <td>{{ p.identidade }}</td>
                    <td>{{ p.login }}</td>
                    <td>{{ p.senha }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-sm btn-primary" href="{{ path('_pdf') }}">Gerar</a>

{% endblock %}
